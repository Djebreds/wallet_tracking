<div class="flex w-full max-w-xs flex-col overflow-hidden border bg-white h-[10rem] rounded-xl p-3">
  <div class="flex flex-col justify-between flex-grow">
    <div class="group">
      <% case transaction.status %>
      <% when 'confirmed' %>
        <h4 class="font-normal text-sm bg-green-50 text-green-500 text-center mb-2 px-2 rounded-lg"><%= transaction.status.humanize %></h4>
      <% else %>
        <h4 class="font-normal text-sm bg-red-50 text-red-500 text-center mb-2 px-2 rounded-lg"><%= transaction.status.humanize %></h4>
      <% end %>
      <div class="flex justify-between">
        <h3 class="font-bold text-md"><%= transaction.transaction_type.humanize %></h3>
        <h3 class="font-bold text-md text-red-500">$ <%= transaction.amount %></h3>
      </div>
      <div class="flex justify-between">
        <h4 class="font-normal text-sm">Transaction ID</h4>
        <h4 class="font-semibold text-sm"><%= transaction.id %></h4>
      </div>
      <div class="flex justify-between">
        <h4 class="font-normal text-sm">Method</h4>
        <h4 class="font-semibold text-sm"><%= transaction.payment_method.humanize %></h4>
      </div>
    </div>
    <h4 class="font-light text-sm"><%= transaction.created_at.strftime('%d %b %Y %I:%M %p') %></h4>
  </div>
</div>
