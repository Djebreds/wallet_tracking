<div class="flex my-5">
  <div class="pt-2 relative mx-auto text-gray-600">
    <%= form_with url: '#' do |form| %>
      <%= form.search_field :search, class: 'border border-gray-300 bg-white h-10 px-5 pr-16 rounded-full text-sm focus:border-indigo-500', placeholder: 'Search...' %>
    <% end %>
    <button type="submit" class="absolute right-0 top-0 mt-5 mr-4">
      <%= heroicon 'magnifying-glass', options: { class: 'h-4 w-4' } %>
    </button>
  </div>
</div>
