<dialog id="<%= param %>" aria-labelledby="modal_title" class="fixed inset-0 z-50 hidden items-center justify-center rounded-xl">
  <div class="bg-white rounded-lg shadow-lg w-[43rem] p-6 relative">
    <header class="flex justify-between items-center border-b pb-3 space-x-5">
      <h2 id="modal_title" class="text-lg font-bold text-gray-800 line-clamp-2">
        <%= title %>
      </h2>
      <form method="dialog">
        <button aria-label="close" class="text-gray-400 hover:text-gray-600 transition p-5">
          âœ•
        </button>
      </form>
    </header>
    <div class="py-4 text-gray-600">
      <%= yield %>
    </div>
    <footer class="flex justify-end border-t pt-3 gap-3">
      <% if content_for?(:additional_button) %>
        <%= yield :additional_button %>
      <% end %>
      <form method="dialog">
        <button
          type="submit" class="px-4 py-2 bg-indigo-100 text-indigo-600 rounded hover:bg-indigo-200 transition">
          Close
        </button>
      </form>
    </footer>
  </div>
</dialog>
