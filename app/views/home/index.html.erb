<section class="h-screen mt-[5rem] mx-5">
  <div class="max-w-[55rem] mx-auto">
    <%= render 'shared/components/alert_and_notification' %>
    <% if authenticated? %>
      <div class="flex justify-between">
        <div class="group">
          <h1 class="font-semibold">Hello, <%= current_user.name %></h1>
          <h4 class="font-normal text-sm">Welcome to wallet tracking application</h4>
        </div>
        <div class="group flex gap-3 items-center">
          <div class="group">
            <h6 class="text-sm font-semibold hidden sm:block">Current Balance</h6>
            <h6 class="text-sm font-semibold block sm:hidden">Balance</h6>
            <h6 class="text-sm">$ <%= current_user.credit %></h6>
          </div>
          <div class="h-10 w-[2px] bg-indigo-500"></div>
          <button type="button" class="bg-green-500 text-white p-1 font-normal text-xs rounded-lg items-center" data-controller="modal" data-action="click->modal#show" data-modal-dialog-param="top_up_modal">
            <%= heroicon 'arrow-up-on-square', options: { class: 'w-8 h-8 sm:w-10 sm:h-10' } %>
          </button>
          <%= render 'shared/components/modal', title: 'Top up', param: 'top_up_modal' do %>
            <%= render 'top_ups/top_up_modal' %>
          <% end %>
        </div>
      </div>
    <% end %>
    <div class="text-center mt-10">
      <h2 class="text-2xl font-bold">Products</h2>
    </div>
  </div>
  <div class="max-w-[60rem] mx-auto mt-5">
    <div>
      <%= render 'shared/components/filter', filter: @categories %>
    </div>
    <% if @products.present? %>
      <div class="grid grid-cols sm:grid-cols-3 md:grid-cols-4 gap-3 justify-center">
        <% @products.each do |product| %>
          <%= render 'shared/components/product_card', product: product %>
          <%= render('shared/components/modal', title: product.name, param: "product_details_modal_#{product.id}") do %>
            <%= render 'products/show_modal', product: product %>
            <% content_for :additional_button, flush: true do %>
              <a
                href="#"
                class="flex items-center justify-center rounded-md bg-indigo-500 px-5 py-2.5 text-center text-sm font-medium text-white"
              >
                Add to cart
              </a>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <% if params[:search].present? %>
        <h2 class="text-center">Opps...! There are no products with the name "<%= params[:search] %>".</h2>
      <% else %>
        <h2 class="text-center">There are no products.</h2>
      <% end %>
    <% end %>
    <div class="flex justify-center py-10">
      <%== pagy_nav(@pagy) %>
    </div>
  </div>
</section>
